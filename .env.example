# Application Configuration
APP_NAME=Atlassian OAuth Proxy
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Atlassian OAuth Configuration
ATLASSIAN_CLIENT_ID=your-atlassian-client-id
ATLASSIAN_CLIENT_SECRET=your-atlassian-client-secret
ATLASSIAN_REDIRECT_URI=http://localhost:8000/auth/callback
ATLASSIAN_SCOPES=read:jira-work,read:jira-user,read:confluence-content.all
ATLASSIAN_AUTH_URL=https://auth.atlassian.com/authorize
ATLASSIAN_TOKEN_URL=https://auth.atlassian.com/oauth/token
ATLASSIAN_API_URL=https://api.atlassian.com

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:3000
MCP_SERVER_TIMEOUT=30
MCP_SERVER_MAX_RETRIES=3

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./oauth_proxy.db
DATABASE_ECHO=false

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
PROMETHEUS_PORT=8001